{{!
    @template mod_booking/col_teachers

    Classes required for JS:
    * none

    Data attributes required for JS:
    * data-region
}}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card-counter primary">
                <i class="fa fa-ticket"></i>
                <span class="count-numbers">{{booked}}</span>
                <span class="count-name">Gebuchte Kurse</span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card-counter success">
                <i class="fa fa-university"></i>
                <span class="count-numbers">{{teacher}}</span>
                <span class="count-name">Kurse als Trainer</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-counter info">
                <i class="fa fa-money"></i>
                <span class="count-numbers">&euro; {{credits}}</span>
                <span class="count-name">Guthaben</span>
            </div>
        </div>
    </div>
</div>

