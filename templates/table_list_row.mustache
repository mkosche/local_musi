{{!
    @template local_musi/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
       "listheaderclass" : "listheaderclass",
       "cardheaderclass" : "cardheaderclass",
       "cardfooterclass" : "cardfooterclass",
       "cardimageclass" : "cardimageclass",
       "cardheader": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardbody": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardfooter": [
            "columnclass" : "columnclass",
            "columnkeyclass" : "columnkeyclass",
            "key" : "columnname",
            "keystring" : "localized column name",
            "columnvalueclass" : "columnvalueclass"
            "value" : "value"
       ],
       "cardimage": [
            "value" : "value"
       ]
    }
}}

<div class="card border py-1 px-3 sk-fade mb-2 flex-md-row align-items-center row gx-0 shadow-sm" {{#datafields}} data-{{key}}="{{value}}" {{/datafields}}>
  <div class="content w-100">

    <div class="row">
    {{#cardimage}}
        <div class="{{cardimageclass}} col-md-2">
            {{#cardimage}}
                {{#value}}
                    <img class="img-fluid rounded list-img" src="{{{value}}}">
                {{/value}}
            {{/cardimage}}
        </div>
        <div class="col-md-10 row pr-0">
    {{/cardimage}}
        <div class="col-md-12 row pr-0">
            {{#top}}
                {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
                <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassbefore}}
                        <i class="{{.}}" aria-hidden="true"></i>
                    {{/columniclassbefore}}
                </span>
                {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                    {{{key}}}
                {{/keystring}}
                {{#keystring}}
                    {{.}}
                {{/keystring}}:
                {{#columnkeyclass}}</span>{{/columnkeyclass}}
                <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                    {{{value}}}
                </span>
                        {{#columnvalueclass}}</span>{{/columnvalueclass}}
                <span {{^value}} style="display:none" {{/value}}>
                    {{#columniclassafter}}
                        <i class="value {{.}}" aria-hidden="true"></i>
                    {{/columniclassafter}}
                </span>
                {{#columnclass}}</div>{{/columnclass}}
            {{/top}}
        </div>
        <div class="col-md-9">
          {{#leftside}}
            {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassbefore}}
                <i class="{{.}}" aria-hidden="true"></i>
              {{/columniclassbefore}}
              </span>
              {{#columnkeyclass}}<span class="key {{.}}">{{/columnkeyclass}}
                {{^keystring}}
                {{{key}}}
              {{/keystring}}
              {{#keystring}}
                {{.}}
              {{/keystring}}:
              {{#columnkeyclass}}</span>{{/columnkeyclass}}
              <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
                {{{value}}}
              </span>
              {{#columnvalueclass}}</span>{{/columnvalueclass}}
              <span {{^value}} style="display:none" {{/value}}>
              {{#columniclassafter}}
                <i class="value {{.}}" aria-hidden="true"></i>
              {{/columniclassafter}}
              </span>
            {{#columnclass}}</div>{{/columnclass}}
          {{/leftside}}
          <div class="d-block">
              <ul class="nav mb-2">
              {{#footer}}
                 {{!^value}}
                  <li class="nav-item pr-3">
                      <div class="d-flex align-items-center">
                          <div class="mr-2 d-flex text-secondary font-size-m icon-uxs align-middle">
                              {{#columniclassbefore}}
                                  <i class="{{.}}  mt-auto mb-auto mr-1 fa-fw" aria-hidden="true" aria-label="
                                    {{^keystring}}
                                      {{{key}}}
                                  {{/keystring}}
                                      {{#keystring}}
                                          {{.}}
                                      {{/keystring}}"></i>
                              {{/columniclassbefore}}
                              {{{value}}}

                                  {{#columniclassafter}}
                                      <i class="value {{.}}" aria-hidden="true"></i>
                                  {{/columniclassafter}}
                          </div>
                      </div>
                  </li>
                  {{!/value}}
          {{/footer}}
              </ul>
        </div>
      </div>
      <div class="col-md-3">
        <div class="h-100 d-flex" style=" justify-content: flex-end;
        flex-direction: column;">
        {{#rightside}}
          {{#columnclass}}<div class="{{.}} {{key}}">{{/columnclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassbefore}}
              <i class="{{.}}" aria-hidden="true"></i>
            {{/columniclassbefore}}
            </span>
            <span {{^value}} style="display:none" {{/value}} class="{{columnvalueclass}} ">
              {{{value}}}
            </span>
            {{#columnvalueclass}}</span>{{/columnvalueclass}}
            <span {{^value}} style="display:none" {{/value}}>
            {{#columniclassafter}}
              <i class="value {{.}}" aria-hidden="true"></i>
            {{/columniclassafter}}
            </span>
          {{#columnclass}}</div>{{/columnclass}}
        {{/rightside}}
        </div>
      </div>
    {{#cardimage}}
    </div>
    {{/cardimage}}
    </div>

  </div>

</div>